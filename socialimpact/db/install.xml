<XMLDB PATH="local/socialimpact" VERSION="2024101500" COMMENT="Social Impact plugin tables">
  <TABLE NAME="course_stats" COMMENT="Aggregated stats per course">
    <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
    <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true"/>
    <FIELD NAME="enrolled_users" TYPE="int" LENGTH="10" NOTNULL="true"/>
    <FIELD NAME="completion_rate" TYPE="float" NOTNULL="true"/>
    <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
    <KEY NAME="courseid_fk" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
  </TABLE>
</XMLDB>